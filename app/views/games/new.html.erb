<div class="container">
  <h1>New Game</h1>

  <ul id="list-inline">
    <% @letters.each do |letter| %>
    <li class="list-inline-item"><%= letter  %></li>
    <% end %>
  </ul>
  <form action="/score" method="get">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label for="user-word">What is the longest word you can find?</label>
    <input type="text" name="word" placeholder="Enter a word" id="user-word">
    <input type="submit" name="submit-word">
  </form>
</div>


